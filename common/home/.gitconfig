[core]
    excludesfile = ~/.gitignore.global
    ignorecase = false
    quotePath = false
    editor = "vi +0"

[color]
    ui = true

[push]
    default = matching

[pull]
    rebase = false

[merge]
    conflictstyle = diff3

[difftool]
    prompt = false

[alias]
    s = status -s
    l = log --oneline --decorate --all --graph
    ll = log --show-signature
    lll = log --show-signature -p
    please = push --force-with-lease
    g = grep --extended-regexp --break --heading --line-number
    search = log --color=always --no-merges -i -E --pretty='%h (%ad) - [%an] %s %d' --date=format:'%b %d %Y' --grep
    diffuse = difftool --tool diffuse

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[color "diff"]
    meta = yellow bold
    frag = cyan
    old = red bold
    new = blue bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[grep]
    break = true
    heading = true
    lineNumber = true

[rebase]
    autoStash = true

[commit]
    gpgsign = true

[gpg]
    program = gpg

[init]
    defaultBranch = master

[includeIf "gitdir:~/work/**/.git"]
    path = ~/.config/git/kupibilet.ini

[includeIf "gitdir:~/.private/work/**/.git"]
    path = ~/.config/git/kupibilet.ini
