#!/bin/sh

CHANNELS=2
RATE=48000

#CHANNELS=1
#RATE=22050

ffmpeg \
  -thread_queue_size 512 \
  -video_size 1920x1080 \
  -framerate 15 \
  -f x11grab \
  -i :0.0+0,0 \
  -thread_queue_size 512 \
  -f alsa \
  -ac "${CHANNELS}" \
  -i input_LOOPBACK_and_usb_card \
  -ar "${RATE}" \
  ~/video/screen/"$(date --rfc-3339=seconds).mkv"
